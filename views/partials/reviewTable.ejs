<!-- Review Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="p-4 lg:p-6">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center mb-6 gap-4">
      <h2 class="text-lg font-semibold">Review</h2>
      <div class="relative w-full lg:w-64">
        <input type="text" placeholder="Search..." class="w-full pl-10 pr-4 py-2 border rounded-lg">
        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full min-w-[800px]">
        <thead>
          <tr class="text-left text-gray-500">
            <th class="pb-4">Name</th>
            <th class="pb-4">Position</th>
            <th class="pb-4">Date Applied</th>
            <th class="pb-4">Status</th>
            <th class="pb-4">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% applicants.forEach(applicant => { %>
          <tr class="border-t">
            <td class="py-4">
              <div class="flex items-center gap-3">
                <img src="<%= applicant.image %>" class="w-10 h-10 p-1 rounded-full m-2" alt="<%= applicant.name %>" />
                <div>
                  <p class="font-semibold"><%= applicant.name %></p>
                  <p class="text-sm text-gray-500">@<%= applicant.email %></p>
                </div>
              </div>
            </td>
            <td class="py-4">
              <p><%= applicant.position.title %></p>
              <p class="text-sm text-gray-500"><%= applicant.position.type %></p>
            </td>
            <td class="py-4">
              <p><%= applicant.applicationDate.date %></p>
              <p class="text-sm text-gray-500"><%= applicant.applicationDate.time %></p>
            </td>
            <td class="py-4">
              <span class="px-3 py-1 <%= applicant.status.color.bg %> <%= applicant.status.color.text %> rounded-full text-sm">
                <%= applicant.status.text %>
              </span>
            </td>
            <td class="py-4">
              <button class="text-blue-500">View Resume</button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
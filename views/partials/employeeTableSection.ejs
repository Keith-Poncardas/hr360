<!-- Employee Table Section -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="overflow-x-auto">
    <%# Data structure for employees %>
    <table class="w-full min-w-[800px]">
      <thead>
        <tr class="text-left text-gray-500 border-b">
          <th class="py-4 px-4 whitespace-nowrap">
            <input type="checkbox" class="rounded">
          </th>
          <th class="py-4 px-4 whitespace-nowrap">Name</th>
          <th class="py-4 px-4 whitespace-nowrap">Employee ID</th>
          <th class="py-4 px-4 whitespace-nowrap">
            Role
            <i class="fas fa-info-circle ml-1 text-gray-400"></i>
          </th>
          <th class="py-4 px-4 whitespace-nowrap">Department</th>
          <th class="py-4 px-4 whitespace-nowrap w-10"></th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(employee => { %>
        <tr class="border-b hover:bg-gray-50">
          <td class="py-4 px-4">
            <input type="checkbox" class="rounded">
          </td>
          <td class="py-4 px-4">
            <div class="flex items-center gap-3">
              <img src="<%= employee.image %>" class="rounded-full w-10 h-10" alt="<%= employee.name %>" />
              <div class="min-w-[160px]">
                <p class="font-semibold"><%= employee.name %></p>
                <p class="text-sm text-gray-500"><%= employee.email %></p>
              </div>
            </div>
          </td>
          <td class="py-4 px-4 text-gray-600"><%= employee.id %></td>
          <td class="py-4 px-4">
            <div class="min-w-[120px]">
              <p><%= employee.role %></p>
              <p class="text-sm text-gray-500"><%= employee.employmentType %></p>
            </div>
          </td>
          <td class="py-4 px-4">
            <div class="min-w-[120px]">
              <p><%= employee.department.name %></p>
              <p class="text-sm text-gray-500"><%= employee.department.type %></p>
            </div>
          </td>
          <td class="py-4 px-4">
            <button class="text-gray-400 hover:text-gray-600">...</button>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="flex flex-col sm:flex-row justify-between items-center p-4 lg:p-6 border-t gap-4">
    <button class="flex items-center gap-2 text-gray-600 order-2 sm:order-1">
      <i class="fas fa-arrow-left"></i>
      Previous
    </button>
    <div class="flex gap-2 order-1 sm:order-2 overflow-x-auto">
      <button class="px-3 py-1 rounded bg-blue-50 text-blue-500">1</button>
      <button class="px-3 py-1 rounded text-gray-600">2</button>
      <button class="px-3 py-1 rounded text-gray-600">3</button>
      <span class="px-3 py-1">...</span>
      <button class="px-3 py-1 rounded text-gray-600">8</button>
      <button class="px-3 py-1 rounded text-gray-600">9</button>
      <button class="px-3 py-1 rounded text-gray-600">10</button>
    </div>
    <button class="flex items-center gap-2 text-gray-600 order-3">
      Next
      <i class="fas fa-arrow-right"></i>
    </button>
  </div>
</div>